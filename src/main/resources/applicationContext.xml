<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="musicBean1"
          class="dev.skosarev.springcourse.RockMusic">
    </bean>

    <bean id="musicBean2"
          class="dev.skosarev.springcourse.ClassicalMusic">
    </bean>

    <bean id="musicBean3"
          class="dev.skosarev.springcourse.RapMusic">
    </bean>

    <bean id="musicList"
          class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="musicBean1"/>
                <ref bean="musicBean2"/>
                <ref bean="musicBean3"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="musicPlayer"
          class="dev.skosarev.springcourse.MusicPlayer">
        <property name="musicList" ref="musicList"/>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>
</beans>